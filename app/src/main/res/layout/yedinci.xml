<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/sol"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/geri" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/blt"
        android:id="@+id/imageView3"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/geri"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text='Bilişim aygıtları arasında ortak bilgi paylaşımını sağlayan bu modeldeki sistemlere "bulut bilişim(Cloud computing)" adı veriliyor.'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_marginBottom="36dp"
        android:layout_above="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="BULUT TEKNOLOJİSİ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textStyle="normal|bold|italic"
        android:textColor="@android:color/holo_purple"
        android:textSize="23sp"
        android:layout_above="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp" />
</RelativeLayout>
