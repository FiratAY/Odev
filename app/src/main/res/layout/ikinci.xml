<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:id="@+id/ikinci">

    <TextView
        android:text="YAZILIM(SOFTWARE) NEDİR?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_baslik"
        android:layout_weight="1"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="79dp"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Yazılım donanımın ne yapacağını belirten talimat setidir."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/textView2"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_below="@+id/text_baslik"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <TextView
        android:text="Bilgisayar yazılımı veya sadece yazılım sistemin oluşturulduğu fiziksel donanımın aksine kodlanmış bilgi veya bilgisayar talimatlarından oluşan bir bilgisayar sisteminin parçasıdır."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/textView3"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/sag"
        android:layout_alignRight="@+id/text_baslik"
        android:layout_alignEnd="@+id/text_baslik"
        android:layout_marginBottom="34dp"
        android:id="@+id/sonra" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/geri"
        android:background="@mipmap/sol"
        android:layout_alignBaseline="@+id/sonra"
        android:layout_alignBottom="@+id/sonra"
        android:layout_alignLeft="@+id/text_baslik"
        android:layout_alignStart="@+id/text_baslik" />

</RelativeLayout>
