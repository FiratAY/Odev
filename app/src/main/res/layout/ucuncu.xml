<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <Button
        android:text="İşletim Sistemi Yazılımları"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/baslık"
        android:layout_marginTop="13dp"
        android:id="@+id/button6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Yazılım tipleri ikiye ayrılmaktadır detaylı öğrenmek için yukarıdaki butonlardan seçebilrisiniz."
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_below="@+id/button7"
        android:background="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textAlignment="center" />

    <Button
        android:text="Uygulamma Yazılımları"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:layout_below="@+id/button6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="YAZILIM TİPLERİ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/baslık"
        android:textColor="@android:color/holo_purple"
        android:textStyle="normal|bold|italic"
        android:textSize="40sp"
        android:layout_marginTop="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/sag"
        android:id="@+id/ileri"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/sol"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:id="@+id/geri"
        android:layout_alignBaseline="@+id/ileri"
        android:layout_alignBottom="@+id/ileri"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
